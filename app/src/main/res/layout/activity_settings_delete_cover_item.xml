<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@android:color/transparent"
    android:padding="0dp"
    tools:ignore="HardcodedText" >
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/Background3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- AppBar -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:outlineSpotShadowColor="@color/HeadText"
                app:liftOnScrollColor="@color/HeadBackground"
                android:outlineAmbientShadowColor="@color/HeadText">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal">
                    <!-- 按钮：退出 -->
                    <ImageButton
                        android:id="@+id/buttonExit"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_play_list_delete"
                        android:contentDescription="关闭本页面"
                        android:tooltipText="关闭本页面" />
                    <!-- 标题文本：清除 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="清除封面图片"
                        android:textColor="@color/HeadText"
                        android:textSize="20sp" />
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <!-- 滚动区域 -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/NestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 清除所有 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ButtonDeleteAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="清除所有封面"
                            android:textColor="@color/HeadText"
                            android:textSize="14sp" />
                    </androidx.cardview.widget.CardView>
                    <!-- 清除视频封面 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ButtonDeleteVideoCover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="清除视频封面"
                            android:textColor="@color/HeadText"
                            android:textSize="14sp" />
                    </androidx.cardview.widget.CardView>
                    <!-- 清除音乐封面 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ButtonDeleteMusicCover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="清除音乐封面"
                            android:textColor="@color/HeadText"
                            android:textSize="14sp" />
                    </androidx.cardview.widget.CardView>
                    <!-- 取消 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ButtonCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="取消"
                            android:textColor="@color/HeadText"
                            android:textSize="14sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>