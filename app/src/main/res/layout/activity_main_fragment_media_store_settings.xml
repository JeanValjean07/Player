<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@android:color/transparent"
    android:padding="0dp"
    tools:ignore="HardcodedText" >
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/Background3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 标题#：更多选项# -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:outlineSpotShadowColor="@color/HeadText"
                app:liftOnScrollColor="@color/HeadBackground"
                android:outlineAmbientShadowColor="@color/HeadText">
                <!-- 标题：更多选项 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal">
                    <!-- 按钮：退出 -->
                    <ImageButton
                        android:id="@+id/buttonExit"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_more_button_exit"
                        android:contentDescription="关闭本页面"
                        android:tooltipText="关闭本页面" />
                    <!-- 标题文本：设置 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="媒体库设置"
                        android:textColor="@color/HeadText"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <!-- 按钮：页面锁定 -->
                    <ImageButton
                        android:id="@+id/buttonLock"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_more_button_lock_off"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <!-- 滚动区域# -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- 滚动区域 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 排序方式 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">
                            <!-- 按钮：排序方式 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@drawable/ic_main_fragment_sort"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="排序方式"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <TextView
                                    android:id="@+id/current_sort"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="当前排序方式"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/ButtonChangeSort"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="更改"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="12dp"
                                    android:textColor="@color/Text2"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>
                            <!-- 排序方式面板 -->
                            <LinearLayout
                                android:id="@+id/sort_type_area"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!-- 正序或倒序 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="排序顺序"
                                        android:textSize="16sp"
                                        android:padding="5dp"
                                        android:paddingStart="40dp"
                                        android:paddingEnd="0dp"
                                        android:layout_gravity="start"
                                        android:textColor="@color/Text2"
                                        tools:ignore="TooDeepLayout" />
                                    <TextView
                                        android:id="@+id/current_sort_orientation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="当前排序顺序"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/Text2" />
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"/>
                                    <TextView
                                        android:id="@+id/ButtonChangeSortOrientation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="更改"
                                        android:textSize="14sp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="12dp"
                                        android:textColor="@color/Text2"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>
                                <!-- 排序方式列表 -->
                                <TextView
                                    android:id="@+id/sort_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="文件名"
                                    android:textSize="16sp"
                                    android:padding="5dp"
                                    android:paddingStart="40dp"
                                    android:paddingEnd="0dp"
                                    android:layout_gravity="start"
                                    android:textColor="@color/Text2"/>
                                <TextView
                                    android:id="@+id/sort_duration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="时长"
                                    android:textSize="16sp"
                                    android:padding="5dp"
                                    android:paddingStart="40dp"
                                    android:paddingEnd="0dp"
                                    android:layout_gravity="start"
                                    android:textColor="@color/Text2"/>
                                <TextView
                                    android:id="@+id/sort_date_added"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="添加日期"
                                    android:textSize="16sp"
                                    android:padding="5dp"
                                    android:paddingStart="40dp"
                                    android:paddingEnd="0dp"
                                    android:layout_gravity="start"
                                    android:textColor="@color/Text2"/>
                                <TextView
                                    android:id="@+id/sort_resolution"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="分辨率"
                                    android:textSize="16sp"
                                    android:padding="5dp"
                                    android:paddingStart="40dp"
                                    android:paddingEnd="0dp"
                                    android:layout_gravity="start"
                                    android:textColor="@color/Text2"/>
                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 筛选 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="400dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">
                            <!-- 标题：筛选 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@drawable/ic_main_fragment_filter"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="筛选"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>