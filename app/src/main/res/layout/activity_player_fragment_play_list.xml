<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent"
    tools:ignore="HardcodedText" >
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="300dp"
        app:cardBackgroundColor="@color/Background3"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:clickable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playListArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/AppBar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:outlineSpotShadowColor="@color/HeadText"
                app:liftOnScrollColor="@color/HeadBackground"
                android:outlineAmbientShadowColor="@color/HeadText"
                tools:targetApi="28">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <!-- 顶部Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">
                        <!-- 关闭按钮 -->
                        <ImageButton
                            android:id="@+id/buttonExit"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:contentDescription="关闭播放列表页面"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_play_list_close"
                            />
                        <!-- 标题:播放列表 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="播放列表"
                            android:textSize="20sp"
                            android:textColor="@color/HeadText"
                            />
                        <!-- 按钮：停止播放 -->
                        <ImageButton
                            android:id="@+id/ButtonStopPlaying"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:contentDescription="停止播放并移除底部播放卡片"
                            android:padding="14dp"
                            android:backgroundTint="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_play_list_delete"
                            />
                        <!-- 占位 -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <!-- 按钮：上一曲 -->
                        <ImageButton
                            android:id="@+id/ButtonPreviousMedia"
                            android:layout_width="30dp"
                            android:layout_height="45dp"
                            android:contentDescription="立即切换上一曲"
                            android:padding="16dp"
                            android:backgroundTint="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_play_list_previous"
                            />
                        <!-- 按钮：下一曲 -->
                        <ImageButton
                            android:id="@+id/ButtonNextMedia"
                            android:layout_width="30dp"
                            android:layout_height="45dp"
                            android:contentDescription="立即切换下一曲"
                            android:padding="16dp"
                            android:backgroundTint="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_play_list_next"
                            />
                        <!-- 循环模式 -->
                        <TextView
                            android:id="@+id/ButtonLoopMode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="循环模式"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textSize="12sp"
                            android:textColor="@color/HeadText" />
                        <!-- 按钮：页面锁定 -->
                        <ImageButton
                            android:id="@+id/buttonLock"
                            android:layout_width="30dp"
                            android:layout_height="45dp"
                            android:contentDescription="锁定或解锁页面"
                            android:padding="12dp"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_more_button_lock_off"
                            />
                    </LinearLayout>
                    <!-- 横滑滚动页签 + 当前列表 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <!-- 横滑滚动页签 -->
                        <HorizontalScrollView
                            android:id="@+id/TabScrollView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/Background3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/VerticalDivideLine"
                            android:scrollbars="none"
                            tools:ignore="TooDeepLayout">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <!-- 自定义 -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/ButtonCardCustomList"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/ButtonCard_OFF"
                                    app:cardElevation="2dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:layout_gravity="center"
                                            android:padding="6dp"
                                            android:backgroundTint="@android:color/transparent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_play_list_custom_list"
                                            tools:ignore="ContentDescription" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:text="自定义列表"
                                            android:textColor="@color/HeadText"
                                            android:textSize="11sp" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <!-- 视频丨实时 -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/ButtonCardVideo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/ButtonCard_OFF"
                                    app:cardElevation="2dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:layout_gravity="center"
                                            android:padding="7dp"
                                            android:backgroundTint="@android:color/transparent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_main_fragment_video_icon"
                                            tools:ignore="ContentDescription" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:text="视频丨实时"
                                            android:textColor="@color/HeadText"
                                            android:textSize="11sp"
                                            />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <!-- 音乐丨实时 -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/ButtonCardMusic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/ButtonCard_OFF"
                                    app:cardElevation="2dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:layout_gravity="center"
                                            android:padding="7dp"
                                            android:backgroundTint="@android:color/transparent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_main_fragment_music_icon"
                                            tools:ignore="ContentDescription" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:text="音乐丨实时"
                                            android:textColor="@color/HeadText"
                                            android:textSize="11sp" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <!-- 末尾占位 -->
                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                        <!-- 中纵分隔线 -->
                        <View
                            android:id="@+id/VerticalDivideLine"
                            android:layout_width="0.2dp"
                            android:layout_height="match_parent"
                            android:background="@color/player_scroller_top_line"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintEnd_toStartOf="@+id/ButtonCurrentList"
                            />
                        <!-- 当前列表 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/ButtonCurrentList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/ButtonCard_OFF"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="当前列表:"
                                    android:textColor="@color/HeadText"
                                    android:textSize="11sp" />
                                <ImageView
                                    android:id="@+id/ButtonCurrentListIcon"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:padding="6dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_play_list_custom_list"
                                    tools:ignore="ContentDescription" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- 顶横分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/player_scroller_top_line"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                        <!-- 底横分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/player_scroller_top_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/ViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="500dp"
                android:background="@color/Background3"
                app:layout_constraintTop_toBottomOf="@+id/AppBar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </androidx.viewpager2.widget.ViewPager2>

       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>