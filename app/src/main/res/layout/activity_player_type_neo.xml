<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:id="@+id/RootConstraint"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">
    <!-- 顶部分隔线 -->
    <View
        android:id="@+id/TopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/player_scroller_top_line"
        app:layout_constraintTop_toTopOf="parent"
        android:translationZ="5dp"/>

    <!-- 小型提示卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/NoticeCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardElevation="10dp"
        app:cardCornerRadius="50dp"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationZ="10dp">
        <TextView
            android:id="@+id/NoticeCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="加载中"
            android:textColor="@color/HeadText"
            android:textSize="12sp"
            />
    </androidx.cardview.widget.CardView>

    <!-- 视频播放区 -->
    <FrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationZ="1dp">
        <!-- playerView -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:resize_mode="fit"
            app:use_controller="false"
            android:clickable="true"
            android:background="@android:color/transparent"
            app:surface_type="surface_view">
        </androidx.media3.ui.PlayerView>
        <!-- 点击层 -->
        <View
            android:id="@+id/playerTouchPad"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="1dp"
            />
        <!-- 播放器遮罩 -->
        <LinearLayout
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/Background"
            android:gravity="center"
            android:translationZ="1dp"
            android:visibility="visible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_player_loading"
                android:padding="10dp"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:id="@+id/playErrorInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中"
                android:textColor="@color/HeadText2"
                android:textSize="12sp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                />
        </LinearLayout>
    </FrameLayout>

    <!-- 控件层 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ControllerLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:fitsSystemWindows="true">
        <!-- 顶部横排按钮区 -->
        <LinearLayout
            android:id="@+id/TopBarArea"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!-- 悬浮返回键 -->
            <ImageButton
                android:id="@+id/TopBarArea_ButtonExit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="单击退出,长按开启小窗"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_general_exit_stroke"
                android:layout_marginStart="8dp"
                android:layout_weight="0"/>
            <!-- 占位 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <!-- 更多选项 -->
            <ImageButton
                android:id="@+id/TopBarArea_ButtonMoreOptions"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="更多选项"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_general_more_options_stroke"
                android:layout_marginEnd="8dp"
                android:layout_weight="0" />
        </LinearLayout>

        <!-- 缩略图上方按钮区 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ButtonArea"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintBottom_toTopOf="@+id/scroller_area"
            android:layout_marginBottom="10dp">
            <!-- 按钮：暂停/开始 -->
            <FrameLayout
                android:id="@+id/buttonPauseContainer"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/ButtonBg"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:cornerRadius="100dp" />
                <ImageButton
                    android:id="@+id/controller_button_playorpause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_player_controller_play"
                    android:visibility="visible"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    tools:ignore="ContentDescription"
                    />
            </FrameLayout>
            <!-- 按钮：切换横屏 -->
            <FrameLayout
                android:id="@+id/buttonSwitchLandscape"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonPauseContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonMaterialSwitchLandscape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/ButtonBg"
                    android:elevation="10dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:cornerRadius="100dp" />
                <ImageButton
                    android:id="@+id/controller_button_landscape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:padding="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_landscape"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    tools:ignore="ContentDescription"
                    />

            </FrameLayout>
            <!-- 按钮：更多选项 -->
            <FrameLayout
                android:id="@+id/buttonMoreButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonSwitchLandscape"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/ButtonBgClosed"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:cornerRadius="100dp"
                    />
                <ImageButton
                    android:id="@+id/controller_button_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_controller_more"
                    tools:ignore="ContentDescription"
                    />
            </FrameLayout>
            <!-- 当前时间 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/VideoCurrentTimeCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Background4"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/timer_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="0"
                        android:text="00:00.000"
                        android:textColor="@color/HeadText"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="/"
                        android:textColor="@color/HeadText"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/timer_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="0"
                        android:text="00:00.000"
                        android:textColor="@color/HeadText"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 缩略图进度条区 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroller_area"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingBottom="25dp"
            android:background="@color/Background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <!-- 顶部分隔线 -->
            <View
                android:id="@+id/player_scroller_top_line"
                android:layout_width="match_parent"
                android:layout_height="0.05dp"
                android:background="@color/player_scroller_top_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <!-- 中间竖线 -->
            <View
                android:id="@+id/player_scroller_center_line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/player_scroller_center_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="1dp"
                />
            <!-- 缩略图进度条 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvThumbnails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>