<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@android:color/transparent"
    android:padding="0dp"
    tools:ignore="HardcodedText" >
    <!-- 顶部区域 -->
    <View
        android:id="@+id/topArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/mainCard"
        android:elevation="0dp"
        />

    <!-- 主卡# -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/Background3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="10dp">
        <!-- 主卡 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 标题# -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:outlineSpotShadowColor="@color/HeadText"
                app:liftOnScrollColor="@color/HeadBackground"
                android:outlineAmbientShadowColor="@color/HeadText">
                <!-- 标题 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/buttonExit"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_exit_2"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频信息"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/HeadText"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:id="@+id/buttonLock"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_more_button_lock_off"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <!-- 滚动区域# -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- 滚动区域 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 播放相关# -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">
                        <!-- 播放相关 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">
                            <!-- 按钮：后台播放 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="19dp"
                                    android:layout_height="19dp"
                                    android:src="@drawable/ic_more_button_background_play"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="后台播放"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/Switch_BackgroundPlay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    app:trackTint="@color/switchTrackColor"
                                    app:thumbTint="@color/switchThumbColor"
                                    tools:ignore="InefficientWeight" />
                            </LinearLayout>
                            <!-- 按钮：循环播放 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_more_button_loop_play"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="循环播放"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/Switch_LoopPlay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    app:trackTint="@color/switchTrackColor"
                                    app:thumbTint="@color/switchThumbColor"
                                    tools:ignore="InefficientWeight" />
                            </LinearLayout>
                            <!-- 按钮：倍速 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@drawable/ic_more_button_speed"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="播放倍速"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <TextView
                                    android:id="@+id/current_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.0"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/buttonChangeSpeed"
                                    android:layout_width="35dp"
                                    android:layout_height="20dp"
                                    android:text="更改"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="12dp"
                                    android:textColor="@color/Text2"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>
                            <!-- 按钮：禁止传感器旋转 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@drawable/ic_more_button_landscape"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="禁止传感器旋转"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/Switch_SealOEL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    app:trackTint="@color/switchTrackColor"
                                    app:thumbTint="@color/switchThumbColor"
                                    tools:ignore="InefficientWeight" />
                            </LinearLayout>
                            <!-- 按钮：只播声音 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@drawable/ic_more_button_close_video_track"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="只播声音"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/Switch_OnlyAudio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    app:trackTint="@color/switchTrackColor"
                                    app:thumbTint="@color/switchThumbColor"
                                    tools:ignore="InefficientWeight" />
                            </LinearLayout>
                            <!-- 按钮：关闭声音 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@drawable/ic_more_button_close_sound_track"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="只播视频"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/Switch_OnlyVideo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    app:trackTint="@color/switchTrackColor"
                                    app:thumbTint="@color/switchThumbColor"
                                    tools:ignore="InefficientWeight" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--  进度条相关 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">
                            <!-- 按钮：快速定位 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <FrameLayout
                                    android:id="@+id/buttonLinkContainer"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/buttonBackgroundPlay">
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/buttonMaterialAlwaysSeek"
                                        android:layout_width="37dp"
                                        android:layout_height="37dp"
                                        android:layout_margin="5dp"
                                        android:elevation="10dp"
                                        android:insetLeft="0dp"
                                        android:insetTop="0dp"
                                        android:insetRight="0dp"
                                        android:insetBottom="0dp"
                                        android:padding="0dp"
                                        app:cornerRadius="100dp" />
                                    <FrameLayout
                                        android:id="@+id/buttonActualAlwaysSeek"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="5dp"
                                        android:elevation="11dp"
                                        android:padding="5dp">
                                        <ImageView
                                            android:id="@+id/buttonImgAlwaysSeek"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="1dp"
                                            android:layout_marginTop="1dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_controller_always_seek"
                                            tools:ignore="ContentDescription" />
                                    </FrameLayout>
                                </FrameLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="快进策略"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2"
                                    />
                            </LinearLayout>
                            <!-- 按钮：链接滚动条与视频进度 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <FrameLayout
                                    android:id="@+id/ButtonLinkScrollerContainer"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginEnd="1dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/buttonLinkContainer">
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/buttonMaterialLink"
                                        android:layout_width="37dp"
                                        android:layout_height="37dp"
                                        android:layout_margin="5dp"
                                        android:elevation="10dp"
                                        android:insetLeft="0dp"
                                        android:insetTop="0dp"
                                        android:insetRight="0dp"
                                        android:insetBottom="0dp"
                                        android:padding="0dp"
                                        app:cornerRadius="100dp" />
                                    <FrameLayout
                                        android:id="@+id/buttonActualLink"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="5dp"
                                        android:clickable="true"
                                        android:elevation="11dp"
                                        android:focusable="true"
                                        android:padding="5dp">

                                        <ImageView
                                            android:id="@+id/buttonImgLink"
                                            android:layout_width="24dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="1dp"
                                            android:layout_marginTop="1dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_controller_scroller_link"
                                            android:visibility="visible"
                                            tools:ignore="ContentDescription" />


                                    </FrameLayout>
                                </FrameLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="链接滚动条与视频进度"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2"
                                    />
                            </LinearLayout>
                            <!-- 按钮：单击定位 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <FrameLayout
                                    android:id="@+id/buttonTapContainer"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginEnd="1dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/buttonLoopPlay">
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/buttonMaterialTap"
                                        android:layout_width="37dp"
                                        android:layout_height="37dp"
                                        android:layout_margin="5dp"
                                        android:elevation="10dp"
                                        android:insetLeft="0dp"
                                        android:insetTop="0dp"
                                        android:insetRight="0dp"
                                        android:insetBottom="0dp"
                                        android:padding="0dp"
                                        app:cornerRadius="100dp" />
                                    <FrameLayout
                                        android:id="@+id/buttonActualTap"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="5dp"
                                        android:clickable="true"
                                        android:elevation="11dp"
                                        android:focusable="true"
                                        android:padding="5dp">
                                        <ImageView
                                            android:id="@+id/buttonImgTap"
                                            android:layout_width="19dp"
                                            android:layout_height="19dp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="1dp"
                                            android:layout_marginTop="1dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_controller_tap"
                                            android:visibility="visible"
                                            tools:ignore="ContentDescription" />
                                    </FrameLayout>
                                </FrameLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="单击跳转"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 视频信息 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="50dp"
                        app:cardBackgroundColor="@color/Background4"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">
                            <!-- 视频信息 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="19dp"
                                    android:layout_height="19dp"
                                    android:src="@drawable/ic_more_button_info"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="视频信息"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/Text2"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/buttonVideoInfo"
                                    android:layout_width="35dp"
                                    android:layout_height="20dp"
                                    android:text="查看"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="12dp"
                                    android:textColor="@color/Text2"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>