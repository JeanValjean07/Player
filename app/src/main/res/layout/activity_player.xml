<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:keepScreenOn="true"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">
    <!-- 根1 - Appbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:elevation="2dp"
        android:background="@color/HeadBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/buttonExit2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="退出"
                android:padding="6dp"
                android:layout_marginStart="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_go_back_2"
                android:layout_weight="0" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="0"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <!-- 悬浮返回键 -->
    <ImageButton
        android:id="@+id/buttonExit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="返回上一级页面"
        android:padding="6dp"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_go_back_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" />
    <!-- 缩略图上方按钮区2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MediumActionsContainer2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:elevation="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp">
        <!-- 按钮：后台播放 -->
        <FrameLayout
            android:id="@+id/buttonBackgroundPlay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMaterialBackgroundPlay"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />
            <FrameLayout
                android:id="@+id/buttonActualBackgroundPlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="11dp"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/buttonImgBackgroundPlay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_background_play"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
        <!-- 按钮：回到起始点 -->
        <FrameLayout
            android:id="@+id/buttonBackToStart"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonBackgroundPlay"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMaterialBackToStart"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/ButtonBg"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />
            <FrameLayout
                android:id="@+id/buttonActualBackToStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="11dp"
                android:padding="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_backtostart"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
        <!-- 按钮：循环播放 -->
        <FrameLayout
            android:id="@+id/buttonLoopPlay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonBackToStart"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMaterialLoopPlay"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/ButtonBg"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />
            <FrameLayout
                android:id="@+id/buttonActualLoopPlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="11dp"
                android:padding="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_loop_play"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
        <!-- 按钮：切换横屏 -->
        <FrameLayout
            android:id="@+id/buttonSwitchLandscape"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonLoopPlay"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMaterialSwitchLandscape"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/ButtonBg"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />
            <FrameLayout
                android:id="@+id/buttonActualSwitchLandscape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="11dp"
                android:padding="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_landscape"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 缩略图上方按钮区1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MediumActionsContainer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp">
        <!-- 按钮：快速定位 -->
        <FrameLayout
            android:id="@+id/buttonLinkContainer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMaterialAlwaysSeek"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />

            <FrameLayout
                android:id="@+id/buttonActualAlwaysSeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="11dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/buttonImgAlwaysSeek"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_always_seek"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
        <!-- 按钮：暂停/开始 -->
        <FrameLayout
            android:id="@+id/buttonPauseContainer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonLinkContainer"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/ButtonBg"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />

            <FrameLayout
                android:id="@+id/buttonPause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="11dp"
                android:focusable="true"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/PauseImage"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="-1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_player_pause"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/ContinueImage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_player_continue"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
        <!-- 按钮：link -->
        <FrameLayout
            android:id="@+id/buttonQuickPosContainer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonPauseContainer"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMaterialLink"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />

            <FrameLayout
                android:id="@+id/buttonActualLink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="11dp"
                android:focusable="true"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/buttonImgLink"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_scroller_link"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />


            </FrameLayout>
        </FrameLayout>
        <!-- 按钮：单击定位 -->
        <FrameLayout
            android:id="@+id/buttonTapContainer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonQuickPosContainer"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMaterialTap"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="100dp" />

            <FrameLayout
                android:id="@+id/buttonActualTap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="11dp"
                android:focusable="true"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/buttonImgTap"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_controller_tap"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />


            </FrameLayout>
        </FrameLayout>
        <!-- 当前时间 -->
        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:text="00:00.000"
            android:textColor="@color/HeadText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 播放器错误提示 -->
    <LinearLayout
        android:id="@+id/playerError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="21dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/playerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player_Text"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:textColor="@color/HeadText"
            android:textSize="20sp" />
        <Button
            android:id="@+id/playerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player_Button"
            android:backgroundTint="@color/ButtonBg"
            android:layout_gravity="center"
            android:textColor="@color/HeadText"
            android:textSize="15sp" />
    </LinearLayout>
    <!-- 根2 - 视频播放区 -->
    <FrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/Background"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <!-- playerView -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:resize_mode="fit"
            android:elevation="2dp"
            app:use_controller="false"
            android:clickable="true"
            android:background="@color/Background"
            app:surface_type="surface_view">
            <!-- 播放器遮罩 -->
            <View
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Background"
                android:visibility="visible" />
        </androidx.media3.ui.PlayerView>
        <!-- Notice卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/noticeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="90dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="50dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="加载中"
                android:textColor="@color/HeadText"
                android:textSize="12sp"
                />

        </androidx.cardview.widget.CardView>
    </FrameLayout>
    <!-- 根3 - 功能区 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/CardViewBottom"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:minHeight="65dp">
            <!-- 缩略图式进度滚动条 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollerContainer"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/innerContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <!-- RecyclerView核心 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvThumbnails"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:adjustViewBounds="false"
                        android:backgroundTint="@color/CardViewRV"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="@+id/innerContainer"
                        app:layout_constraintEnd_toEndOf="@+id/innerContainer"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/innerContainer"
                        app:layout_constraintTop_toTopOf="@+id/innerContainer"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/HeadText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>